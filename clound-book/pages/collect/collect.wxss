.loading image{
  position: fixed;
  left: 50%;
  top: 50%;
  margin-top: -150rpx;
  margin-left: -150rpx;
  width: 300rpx;
  height: 300rpx;
}

.books{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 20rpx;
}

.books .book{
  width: 350rpx;
  height: 400rpx;
  text-align: center;
  display: flex;
  flex-direction: column
}

.book .img{
  width: 250rpx;
  height: 300rpx;
  margin-left: 50rpx
}

.book .author{
  font-size: 14px;
  color: #333;
  margin-top: 30rpx
}

.load{
  font-size: 14px;
  text-align: center;
  color: #444;
  margin: 20rpx;
}