
.loading image{
  position: fixed;
  left: 50%;
  top: 50%;
  margin-top: -150rpx;
  margin-left: -150rpx;
  width: 300rpx;
  height: 300rpx;
}

.container{
  margin: 0 20rpx;
  padding: 0;
}

.slideShow .slide-image{
  height: 350rpx;
  width: 100%;
}

.content{
  margin-top:50rpx; 
}

.content .books{
  margin-top: 30rpx;
}

.content .title{
  display: flex;
  justify-content: space-between;
  height: 32rpx;
}

.content .title .get-more{
  font-size: 14px;
  line-height: 32rpx;
  color: #444;
}

.content .title .class-title{
  font-size: 16px;
  font-weight: 700;
  color: #333;
  line-height: 32rpx;
  padding-left:20rpx; 
  border-left: 2px solid #000;
}

.content .book{
  padding: 30rpx 0;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #e9e9e9
}

.book .img{
  width: 200rpx;
  height: 300rpx;
}

.book .book-text{
  margin:0 0 10rpx 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 12px;
  color: #666;
}

.book .book-title{
  font-weight: 700;
  color: #444;
  font-size: 13px
}

.book .book-desc{
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  align-content: center;
}

.book .book-anthor{
  display: flex;
  justify-content: space-between;
  height: 28rpx;
  line-height: 28rpx;
}

.book .book-anthor .book-r text{
  margin-left: 10rpx;
}

.book .book-anthor .book-r .createTime{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap
}

.container .load{
  margin: 10rpx;
  text-align: center;
  font-size: 14px;
  color: #666;
}